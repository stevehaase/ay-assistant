.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      span(class=title=='Yoga Teacher Assistant'?'homepage':undefined)
        a.navbar-brand(href='/')
          div
            img.ay-logo(src="//cdn2.hubspot.net/hub/161221/file-316467945-png/Aquin_Yoga_Logo_Full.png")
            | Yoga Teacher Assistant
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=title=='Notes'?'active':undefined)
            a(href='/notes') Notes
          li(class=title=='ToDos'?'active':undefined)
            a(href='/todos') ToDos
          li(class=title=='Agenda'?'active':undefined)
            a(href='/agenda') Agenda
          li(class=title=='Inspiration'?'active':undefined)
            a(href='/inspiration') Inspiration
        else
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Sign up
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li(class=title=='Contact'?'active':undefined)
                a(href='/contact') Contact
              li.divider
              li
                a(href='/logout') Logout