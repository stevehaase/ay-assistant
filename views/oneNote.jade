extends layout

block content
  .row
    .col-sm-12
      h2 
        a(href="/notes") Notes

        h4= note.title
        p(style='white-space:pre;')= note.note
        span
          em(style="color:#666;")= moment(note.date).format("MMM DD, YY") + ' at ' + moment(note.date).format("hh:mm a")
          a.span(style="float: right; padding-right: 20%; color: #aaa;" href='/notes/edit/'+note.num) Edit
        hr