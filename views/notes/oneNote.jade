extends ../layout

block content
  .row
    .col-sm-12
      h2 
        a(href="/notes") Notes

        h4= note.title
        p(style='white-space:pre;')= note.note
        span
          em(style="color:#666;")= moment(note.date).format("MMM DD, YY") + ' at ' + moment(note.date).format("hh:mm a")
          a.span(style="float: right; padding-right: 10%; color: #aaa; cursor: pointer;" onclick='myScript('+note.num+')') Delete
          a.span(style="float: right; padding-right: 7px; color: #aaa;" href='/notes/edit/'+note.num) Edit 

        hr

  script(type="text/javascript").
    function myScript(index){
      if (window.confirm('Are you sure you want to delete this note?')) window.location.href = '/notes/delete/'+index;
      else return;
    }